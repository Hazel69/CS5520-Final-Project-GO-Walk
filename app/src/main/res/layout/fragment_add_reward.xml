<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/reward_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reward_name_hint"
        android:layout_marginBottom="@dimen/form_space_medium"
        android:layout_marginTop="@dimen/form_space_medium"/>

    <EditText
        android:id="@+id/reward_points_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:digits="0123456789"
        android:hint="@string/reward_points_hint"/>

</LinearLayout>