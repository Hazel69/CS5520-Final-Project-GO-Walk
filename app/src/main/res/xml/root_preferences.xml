<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Your profile">
        <EditTextPreference
            app:key="username"
            app:title="@string/setting_username"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Goal Setting">
        <EditTextPreference
            app:key="daily-step-goal"
            app:title="@string/setting_daily_goal"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="points-gained-for-daily-goal"
            app:title="@string/setting_daily_points"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


</PreferenceScreen>
